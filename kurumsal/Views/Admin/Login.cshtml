@model dentexpert.Models.Admin
@{
    Layout = null;
 }
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="/Content/soft-ui-dashboard/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="/Content/soft-ui-dashboard/assets/img/favicon.png">
    <title>
        Dentexpert Admin Login
    </title>
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
    <!-- Nucleo Icons -->
    <link href="/Content/soft-ui-dashboard/assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="/Content/soft-ui-dashboard/assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <link href="../assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- CSS Files -->
    <link id="pagestyle" href="/Content/soft-ui-dashboard/assets/css/soft-ui-dashboard.css?v=1.0.3" rel="stylesheet" />
</head>

<body class="">
    
    <main class="main-content  mt-0">
        <section>
            <div class="page-header min-vh-75">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-4 col-lg-5 col-md-6 d-flex flex-column mx-auto">
                            <div class="card card-plain mt-8">
                                <div class="card-header pb-0 text-left bg-transparent">
                                    <h3 class="font-weight-bolder text-info text-gradient">Admin Paneline Hoşgeldiniz</h3>
                                    <p class="mb-0">Kullanıcı adı ve şifre giriniz</p>
                                </div>
                                <div class="card-body">
                                    @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
                                    {
                                <form role="form">
                                    <label>Kullanıcı Adı</label>
                                    <div class="mb-3">
                                        <input type="text" class="form-control" placeholder="Kullanıcı Adı" aria-describedby="email-addon" name="username">
                                    </div>
                                    <label>Şifre</label>
                                    <div class="mb-3">
                                        <input type="password" class="form-control" placeholder="Şifre" aria-describedby="password-addon" name="password">
                                    </div>
                                    <div class="text-center">
                                        <button type="submit" class="btn bg-gradient-info w-100 mt-4 mb-0">Giriş</button>
                                    </div>
                                </form>}

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </main>
    <!--   Core JS Files   -->
    <script src="/Content/soft-ui-dashboard/assets/js/core/popper.min.js"></script>
    <script src="/Content/soft-ui-dashboard/assets/js/core/bootstrap.min.js"></script>
    <script src="/Content/soft-ui-dashboard/assets/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="/Content/soft-ui-dashboard/assets/js/plugins/smooth-scrollbar.min.js"></script>
    <script>
        var win = navigator.platform.indexOf('Win') > -1;
        if (win && document.querySelector('#sidenav-scrollbar')) {
            var options = {
                damping: '0.5'
            }
            Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
        }
    </script>
    <!-- Github buttons -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <!-- Control Center for Soft Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="/Content/soft-ui-dashboard/assets/js/soft-ui-dashboard.min.js?v=1.0.3"></script>
</body>

</html>