
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


@model dentexpert.Models.Contact
<section id="content">
    <div class="container">
        <div class="row">
            <section id="inner-headline">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <ul class="breadcrumb">
                                <li><a href="/Home/Index"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                                <li class="active">İletişim</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </section>
            <div class="col-lg-12">
                <h3>Bizimle İletişime Geçin!</h3>
                <h3 class="alert-info">@ViewBag.Alert</h3>
                @using (Html.BeginForm("Contact", "Contact", FormMethod.Post))
                {
                    <div>
                        @Html.TextBoxFor(m => m.name, new { @class = "form-control", @placeholder = "Ad", @required = "cannot be blank" })
                    </div>
                    <br />
                    <div>
                        @Html.TextBoxFor(m => m.surname, new { @class = "form-control", @placeholder = "Soyad", @required = "cannot be blank" })
                    </div>
                    <br />
                    <div>
                        @Html.TextBoxFor(m => m.email, new { @class = "form-control", @placeholder = "E-Mail", @required = "cannot be blank" })
                    </div>
                    <br />
                    <div>
                        @Html.TextBoxFor(m => m.phoneNumber, new { @class = "form-control", @placeholder = "Telefon Numarası", @required = "cannot be blank" })
                    </div>
                    <br />
                    <div>
                        @Html.TextBoxFor(m => m.subject, new { @class = "form-control", @placeholder = "Konu", @required = "cannot be blank" })
                    </div>
                    <br />
                    <div>
                        @Html.TextAreaFor(m => m.description, new { @class = "form-control", @placeholder = "Mesaj", @required = "cannot be blank" })
                    </div>
                    <br />
                    <div>
                        <button class="btn btn-info">Gönder</button>
                    </div>
                }
                <div class="clearfix">
                </div>
                <div class="row">
                    <section id="content" class="margintop10">
                        <div class="map">
                            <div>
                                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12036.485002135305!2d28.831059487323962!3d41.0444774687521!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14caa50958716683%3A0xacdd3a54ffa2b4c8!2zRGVudGV4cGVydCBBxJ_EsXogdmUgRGnFnyBTYcSfbMSxxJ_EsSBQb2xpa2xpbmnEn2k!5e0!3m2!1str!2str!4v1657296826491!5m2!1str!2str" loading="lazy" class="col-md-12" width="640"></iframe>

                            </div>
                        </div>

                    </section>
                </div>
            </div>
        </div>
    </div>
</section>






